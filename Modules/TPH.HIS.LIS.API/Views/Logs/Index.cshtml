@using TPH.HIS.WebAPI.Configs
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="page-header">
        
        <div class="input-group col-xs-12">

            <div class="col-xs-3 col-sm-3" style="width: 280px">
                <label for="id-date-picker-1" class="col-sm-2 control-label">Ngày</label>
                <div class="col-sm-8" style="width: 200px">
                    <div class="input-group" style="width: 150px">
                        <input class="form-control date-picker" id="dptLogDate" type="text" data-date-format="dd-mm-yyyy" />
                        <span class="input-group-addon">
                            <i class="fa fa-calendar bigger-110"></i>
                        </span>
                    </div>
                </div>
            </div>

            <div class="input-group col-xs-8 col-sm-6">
                <span class="input-group-addon">
                    <i class="ace-icon fa fa-check"></i>
                </span>

                <input type="text" class="form-control search-query" placeholder="Nhập thông tin tìm kiếm" id="txtFilter">
                <span class="input-group-btn">
                    <button type="button" class="btn btn-inverse btn-white" id="btnSearch">
                        <span class="ace-icon fa fa-search icon-on-right bigger-110"></span>
                        Tìm
                    </button>
                </span>
            </div>
        </div>                
    </div>

    <!-- /.page-header -->
    <div class="row">
        <div class="col-xs-12">
            <div id="grid"></div>
        </div>
    </div>


    <div id="dialog-message-detail" class="hide">
        <textarea id="message" placeholder="Enter Message Log" class="col-sm-12" style="height:600px;resize: none"></textarea>
    </div>
    @section scripts{
        <script src="@Url.Content("~/Assets/ViewLogs/ViewLogs.js?ver="+ @HisApiCommonConfigs.JsVersion)" type="text/javascript"></script>
    }
